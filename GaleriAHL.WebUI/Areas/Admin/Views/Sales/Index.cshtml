@model IEnumerable<GaleriAHL.Entities.Satis>

@{
    ViewData["Title"] = "Satışlar";
}

<h1>Satışlar</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Yeni Satış Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SatisFiyat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SatisTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Musteri)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SatisFiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SatisTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arac.KasaTip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Musteri.Ad)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
